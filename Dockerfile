FROM node:latest

WORKDIR /root

COPY . .

RUN npm install

RUN bash setup.sh

ENV PATH="/root/rclone-v1.51.0-linux-amd64:$PATH"

ENV PATH="/root/aria2-1.35.0-linux-gnu-64bit-build1:$PATH"

ENV HEROKU_APP_NAME=meharia2

ENV ARIA2C_SECRET=ranabhai

ENV RCLONE_CONFIG_

ENV RCLONE_DESTINATION=/downloads

CMD bash /root/start.sh
